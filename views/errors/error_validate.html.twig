{% extends "layout/layout.html.twig" %}
{% block content %}
    <div class="container ml-4 mr-4 mb-4 mt-4">
        {% for error in errors %}
            <h2>{{ error }}</h2>
        {% endfor %}
        <button class="button is-danger">Go back to application</button>
    </div>
    <script>
        $('.button').click(function() {
            $.ajax({
                type: "POST",
                url: "views/errors/go_back_index.php",
                data: null
            }).done(function () {
                location.reload()
            })
        });
    </script>
{% endblock %}
